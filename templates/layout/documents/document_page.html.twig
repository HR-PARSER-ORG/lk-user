{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Analytics Request</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">General Information</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">UUID</dt>
                            <dd class="col-sm-8">{{ document.id }}</dd>

                            <dt class="col-sm-4">Поле поиска</dt>
                            <dd class="col-sm-8">{{ document.searchField }}</dd>

                            <dt class="col-sm-4">Уровень квал</dt>
                            <dd class="col-sm-8">{{ document.qualificationLevel }}</dd>

                            <dt class="col-sm-4">Регион</dt>
                            <dd class="col-sm-8">
                                {% if document.region is not empty %}
                                {% for item in document.region %}
                                    {{ item }}
                                {% endfor %}
                                {% else %}
                                    Все
                                {% endif %}
                            </dd>

                            <dt class="col-sm-4">ДМС</dt>
                            <dd class="col-sm-8">{{ document.vmi }}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">Additional Information</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Модификатор поиска</dt>
                            <dd class="col-sm-8">
                                {% for item in document.searchModifier %}
                                    {{ item }}
                                {% endfor %}
                            </dd>

                            <dt class="col-sm-4">Только с зарплатой</dt>
                            <dd class="col-sm-8">{{ document.hasSalary }}</dd>

                            <dt class="col-sm-4">Занятость</dt>
                            <dd class="col-sm-8">{{ document.employment }}</dd>

                            <dt class="col-sm-4">График</dt>
                            <dd class="col-sm-8">{{ document.schedule }}</dd>

                            <dt class="col-sm-4">Опыт</dt>
                            <dd class="col-sm-8">{{ document.experience }}</dd>

                            <dt class="col-sm-4">Создан</dt>
                            <dd class="col-sm-8">{{ document.createdAt | date('Y-m-d H:i:s') }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <dt class="col-sm-4">Индустрии</dt>
            <dd class="col-sm-8">
                {% if document.searchModifier is not empty %}
                    {% for item in document.industry %}
                        <div>{{ item }}</div>
                    {% endfor %}
                {% else %}
                    Все
                {% endif %}
            </dd>
        </div>
    </div>
{% endblock %}
